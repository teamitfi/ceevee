meta {
  name: Login
  type: http
  seq: 1
}

post {
  url: http://localhost:4000/api/v1/public/login
  body: json
  auth: none
}

headers {
  Content-Type: application/json
}

body:json {
  {
    "email": "{{email}}",
    "password": "{{password}}"
  }
}

script:post-response {
  bru.setVar("token", res.body.token);
  bru.setVar("refreshToken", res.body.refreshToken)
}
